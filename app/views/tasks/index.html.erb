<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
      <p> <%= task.details %></p>
       <p><%= link_to 'Delete task', task_path(task), method: :delete %></p>
       <p><%= link_to 'Create a new task', tasks_new_path %></p>

      <% if task.completed  %>
        <p>[x]</p>
      <% else %>
        <p>[ ]</p>

    <% end %>

  <% end %>


</ul>


